<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rinkesh.nyaay_srmhack.Dashboard"
    tools:showIn="@layout/app_bar_dashboard">

     <TextView
         android:id="@+id/header"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="File or know about a Case"
         android:gravity="center"
         android:fontFamily="serif"
         android:layout_marginTop="20dp"
         android:textSize="25sp" />

    <EditText
        android:id="@+id/whenedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:hint="When it happened"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/whereedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Where it happened?"
        android:fontFamily="serif"
        android:layout_below="@+id/whenedit"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:fontFamily="serif"
        android:layout_below="@+id/whereedit"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/typetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        android:fontFamily="serif"
        android:layout_below="@+id/category"
        android:layout_marginTop="20dp"/>




    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Upload"
        android:layout_marginBottom="82dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
